{
    "name": "cheppers/szamlazz-client",
    "description": "Szamlazz.hu client library",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "minimum-stability": "dev",
    "config": {
        "bin-dir": "bin",
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "require": {
        "php": ">=7.2",
        "ext-dom": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "Cheppers\\SzamlazzClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cheppers\\SzamlazzClient\\Tests\\": "tests/src/"
        }
    },
    "scripts": {
        "lint:phpcs": "phpcs ./bin/phpcs --standard=PSR2 src/ tests/"
    }
}
